# Test Database Configuration
spring.datasource.url=jdbc:h2:mem:testdb;DB_CLOSE_DELAY=-1;DB_CLOSE_ON_EXIT=FALSE;NON_KEYWORDS=USER
spring.datasource.driver-class-name=org.h2.Driver
spring.datasource.username=sa
spring.datasource.password=

# JPA Test Configuration
spring.jpa.hibernate.ddl-auto=create-drop
spring.jpa.show-sql=false
spring.jpa.open-in-view=false

# JWT Test Configuration
jwt.secret=test-secret-key-that-is-long-enough-for-jwt-hmac-sha-algorithm-requirements-minimum-256-bits
jwt.expiration=3600000

# Disable unnecessary features for tests
spring.h2.console.enabled=false
logging.level.org.hibernate=WARN
logging.level.org.springframework=WARN
logging.level.org.hibernate.tool.schema.internal.SchemaDropperImpl=ERROR
